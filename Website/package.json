{
  "name": "asisaga-website-workspace",
  "version": "1.0.0",
  "description": "ASI Saga website workspace with accessibility-first development tools",
  "scripts": {
    "lint:css": "stylelint \"theme.asisaga.com/**/*.scss\" \"*.asisaga.com/**/*.scss\" \"**/*.css\" --fix --allow-empty-input",
    "lint:html": "htmlhint \"**/*.html\" --config .htmlhintrc",
    "dev:validate": "npm run lint:css && npm run lint:html",
    "dev:validate:all": "npm run lint:css && npm run lint:html && npm run test:accessibility:all",
    "precommit": "npm run test:accessibility",
    "install:all": "cd theme.asisaga.com && npm install && cd ../businessinfinity.asisaga.com && npm install"
  },
  "devDependencies": {
    "@double-great/stylelint-a11y": "^3.4.0",
    "htmlhint": "^1.1.4",
    "husky": "^8.0.3",
    "lint-staged": "^15.0.0",
    "pa11y-ci": "^3.0.1",
    "sass": "^1.93.2",
    "stylelint": "^16.21.1",
    "stylelint-config-recommended": "^16.0.0",
    "stylelint-config-recommended-scss": "^15.0.1",
    "stylelint-scss": "^6.12.1"
  },
  "lint-staged": {
    "*.{scss,css}": [
      "stylelint --fix",
      "git add"
    ],
    "*.html": [
      "htmlhint"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^7.1.0",
    "bootstrap": "^5.3.8"
  }
}